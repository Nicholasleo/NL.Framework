@using NL.Framework.Model.System;
@model IEnumerable<FunctionModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/bundles/dtree")

<div class="layui-fluid">
    <div class="layui-card">
        <div class="layui-form layui-card-header layuiadmin-card-header-auto">
        </div>
        <div class="layui-card-body">
            <div class="layui-row layui-col-space10">
                <div class="layui-col-md6">
                    <div class="layui-card" overflow-y:auto;">
                        <div class="layui-form layui-card-header layuiadmin-card-header-auto">
                            <h1>请选择对应的角色授权</h1>
                        </div>
                        <div class="layui-card-body">
                            <table id="LAY-useradmin-right" lay-filter="LAY-useradmin-right"></table>
                        </div>
                    </div>
                </div>
                <!--菜单功能树-->
                <div class="layui-col-md6">
                    <div class="layui-card">
                        <div class="layui-form layui-card-header layuiadmin-card-header-auto">
                            @{
                                if (Model.Where(t => t.FunctionEvent.ToLower().Equals("add")).ToList().Count == 1)
                                {
                                    <button class="layui-btn layui-nicholas-leo" data-type="save">保存</button>
                                }
                            }
                        </div>
                        <div class="layui-card-body">
                            <div style="padding-bottom: 10px;">
                                <h2>请勾选权限</h2>
                            </div>
                            <div style="height:calc(100vh - 260px); overflow-y:auto;" id="toolBarDiv">
                                <ul id="rightTree" class="dtree" data-id="0"></ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/Modules/RightScript.js")"></script>

