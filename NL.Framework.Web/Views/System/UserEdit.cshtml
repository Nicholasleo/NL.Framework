            'UserCode': '@Model.UserCode',
            'UserName': '@Model.UserName',
            'UserAge': '@Model.UserAge',
            'Gender': '@Model.Gender',
            'IsAdmin': '@Model.IsAdmin',
            'Address': '@Model.Address',
            'Email': '@Model.Email',
            'WeChat': '@Model.WeChat',
            'QQ': '@Model.QQ',
            'MobilePhone': '@Model.MobilePhone',
